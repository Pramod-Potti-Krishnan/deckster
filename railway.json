{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements-prod.txt || pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "python -m uvicorn src.api.main:app --host 0.0.0.0 --port ${PORT:-8000} --workers 1",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  }
}